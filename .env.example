# Email Access Agent Configuration
# Copy this file to .env and fill in your actual values

# Email Configuration (optional - agent can run in demo mode without these)
EMAIL_ADDRESS=your-email@example.com
EMAIL_PASSWORD=your-app-specific-password
IMAP_SERVER=imap.gmail.com

# LLM Configuration (required)
# Choose one of the following:

# For OpenAI
OPENAI_API_KEY=your-openai-api-key
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# For Anthropic Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-opus-20240229

# Agent Configuration
NOTIFICATION_METHOD=console  # Options: console, email, slack, webhook
CHECK_INTERVAL=300  # Seconds between email checks (default: 5 minutes)

# MCP Configuration (optional)
# MCP_ENDPOINT=http://localhost:8080
# MCP_API_KEY=your-mcp-api-key

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
